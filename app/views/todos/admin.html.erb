<div>
<h1>Admin Todos</h1>
  <table>
    <th>
      <h4><tr align="left"><strong>
        <td>date</td>
        <td>user</td>
        <td>priority</td>
        <td>job</td>
        <td>contact</td>
        <td>company</td>
        <td>notes</td>
        <td>step</td>
      </strong></tr></h4>
    </th>
    <% @todos.each do |todo| %>
    <tr>
      <td><%= todo.date %></td>
      <td><%= link_to todo.user.email, user_path(todo.user) %></td>
      <td><%= todo.priority %></td>
      <td><%= link_to todo.job.title, job_path(todo.job) %></td>
      <td><%= todo.contact.fname.concat(todo.contact.lname) %></td>
      <td><%= link_to todo.company.name, company_path(todo.company) %></td>
      <td><%= todo.notes %></td>
      <td><%= todo.step.name %></td>
    </tr>
  <% end %>
  </table>
</div>
