<div>
  <table>
    <th>
      <h4><tr align="left"><strong>
        <td>status</td>
        <td>date</td>
        <td>step</td>
        <td>notes</td>
        <td>next_step</td>
        <td>company</td>
        <td>contact1</td>
        <td>contact2</td>
        <td>job</td>
        <td>first_contact</td>
      </strong></tr></h4>
    </th>
    <% actions.each do |action| %>
    <tr>
      <td><%= action.status %></td>
      <td><%= action.date %></td>
      <td><%= action.step.name %></td>
      <td><%= action.notes %></td>
      <td><%= action.next_step %></td>
      <td><%= link_to action.company.name, company_path(action.company) %></td>
      <td><%= link_to action.contact.fname.concat(action.contact.lname), contact_path(action.contact) %></td>
      <td><%= link_to action.job.title, job_path(action.job) %></td>
      <td><%= action.first_contact %></td>
    </tr>
    <% end %>
  </table>
</div>
